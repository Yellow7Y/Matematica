package Matemática_no_java;

import java.util.Random;
import java.util.Scanner;

import static java.lang.Math.*;

public class calculoDeJogos {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random numerosDaMegaSena = new Random();
        System.out.println("Quantos jogos você deseja realizar?");
        int numeroDeJogos = scanner.nextInt();
        if (numeroDeJogos > 1) {
            for (int i = 0; i < 6; i++) {
                System.out.println(numerosDaMegaSena.nextInt(59 + 1));
            }
            System.out.println("-----------------------------");
        }

    }
}
